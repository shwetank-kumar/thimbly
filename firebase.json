{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [{ "source": "**", "function": "app" }]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 3003
    },
    "hosting": {
      "port": 3001
    },
    "pubsub": {
      "port": 3004
    },
    "ui": {
      "enabled": true
    },
    "functions": {
      "port": 3002
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
